<%- include('partials/_header_msg'); -%>
    <div class="container animate__animated animate__zoomInUp">
        <div class="mt-4 mx-auto text-white">
            <h2>Consultar Mensajes secretos </h2>
        </div>
        <div class="row align-items-start mt-4">
            <div class="col">
                <table class="table table-bordered table-hover bg-white shadow p-3 mb-5 bg-white rounded">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Mensaje Descencriptado</th>
                            <th scope="col">Contrase√±a</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Secciones de ejs para mostrar datos -->
                        <% if(data) { %>

                            <% for(i=0;i<data.length;i++){ %>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= data[i].name_user %>
                                    </td>
                                    <td class="text-success">
                                        <%= data[i].msg %>
                                    </td>
                                    <td>
                                        <%= data[i].pass %>
                                    </td>
                                </tr>
                                <!-- fin del for -->
                                <% } %>
                                    <!-- fin del IF -->
                                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-light float-right">
                <a href="/dataCifrado" class="text-primary">
                    Consultar otro mensaje cifrado <i class="fas fa-mask"></i>
                </a>
            </button>
        </div>
    </div>
<%- include('partials/_footer_consultas'); -%>